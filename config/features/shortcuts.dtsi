        MODTAP_TP(mt_meh_a,              &mc_meh_a)
        MACRO(mc_meh_e,                  &macro_tap &kp LC(LA(LS(DE_E))))
        MODTAP_TP(mt_meh_e,              &mc_meh_e)
        MACRO(mc_meh_f,                  &macro_tap &kp LC(LA(LS(DE_F))))
